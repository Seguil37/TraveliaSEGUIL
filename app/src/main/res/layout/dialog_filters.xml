<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <EditText
        android:id="@+id/et_filter_destino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_search_background"
        android:hint="Destino"
        android:padding="12dp" />

    <Spinner
        android:id="@+id/sp_filter_tipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_search_background" />

    <TextView
        android:id="@+id/tv_filter_precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Precio mÃ¡ximo: S/1500"
        android:textColor="@color/travelia_text_dark"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/seek_filter_precio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="2000"
        android:progress="1500" />

    <TextView
        android:id="@+id/tv_filter_fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_search_background"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:text="Seleccionar fecha"
        android:textColor="@color/travelia_text_dark" />

    <Button
        android:id="@+id/btn_filter_aplicar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button_gold"
        android:text="Aplicar"
        android:textColor="@color/travelia_text_dark"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_filter_limpiar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_button_gold"
        android:text="Limpiar"
        android:textColor="@color/travelia_text_dark" />
</LinearLayout>
