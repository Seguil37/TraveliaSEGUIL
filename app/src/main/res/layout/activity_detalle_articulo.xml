<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F4F9">

    <!-- TOP BAR -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:background="#FFC107"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_logo"
            android:contentDescription="Logo"
            app:tint="@color/white" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginEnd="5dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_logo"
            android:scaleType="centerCrop"
            android:contentDescription="Perfil" />
    </LinearLayout>

    <!-- CONTENIDO -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <!-- BotÃ³n Regresar -->
            <Button
                android:id="@+id/btn_regresar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/ic_home"
                android:drawablePadding="8dp"
                android:text="Regresar a Inventario"
                android:textColor="#E91E63"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Card Detalle -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- TÃ­tulo -->
                    <TextView
                        android:id="@+id/tv_titulo_detalle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Full Day Machu Picchu"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#1C1C1E" />

                    <!-- Imagen y Detalles -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <!-- Imagen -->
                        <ImageView
                            android:id="@+id/iv_detalle_imagen"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/mapi"
                            android:background="@drawable/rounded_search_background" />

                        <!-- Detalles -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="8dp">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="ValoraciÃ³n:"
                                    android:textSize="12sp"
                                    android:textColor="#666666" />
                                <TextView
                                    android:id="@+id/tv_valoracion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="â˜… 4.9 (320 reseÃ±as)"
                                    android:textSize="12sp"
                                    android:textColor="#1C1C1E"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="8dp">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="DuraciÃ³n:"
                                    android:textSize="12sp"
                                    android:textColor="#666666" />
                                <TextView
                                    android:id="@+id/tv_duracion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1 DÃ­a Completo"
                                    android:textSize="12sp"
                                    android:textColor="#1C1C1E"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="8dp">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Incluye:"
                                    android:textSize="12sp"
                                    android:textColor="#666666" />
                                <TextView
                                    android:id="@+id/tv_incluye"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Transporte, guÃ­a, entradas"
                                    android:textSize="11sp"
                                    android:textColor="#1C1C1E"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="8dp">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Servicios:"
                                    android:textSize="12sp"
                                    android:textColor="#666666" />
                                <TextView
                                    android:id="@+id/tv_servicios"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Almuerzo incluido"
                                    android:textSize="12sp"
                                    android:textColor="#1C1C1E"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="8dp">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Idiomas:"
                                    android:textSize="12sp"
                                    android:textColor="#666666" />
                                <TextView
                                    android:id="@+id/tv_idiomas"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="EspaÃ±ol, InglÃ©s"
                                    android:textSize="12sp"
                                    android:textColor="#1C1C1E"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="UbicaciÃ³n:"
                                    android:textSize="12sp"
                                    android:textColor="#666666" />
                                <TextView
                                    android:id="@+id/tv_ubicacion_detalle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Cusco, PerÃº"
                                    android:textSize="12sp"
                                    android:textColor="#1C1C1E"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- DescripciÃ³n -->
                    <TextView
                        android:id="@+id/tv_descripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Descubre una de las maravillas del mundo en un tour Ãºnico que combina historia, cultura y aventura. Perfecto para quienes buscan una experiencia inolvidable en los Andes."
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="4dp" />

                    <!-- Precio y BotÃ³n -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="20dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Precio:"
                                android:textSize="14sp"
                                android:textColor="#666666" />

                            <TextView
                                android:id="@+id/tv_precio_detalle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="S/280.00"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#1C1C1E" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_ver_disponibilidad"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:paddingHorizontal="24dp"
                            android:background="@drawable/rounded_button_gold"
                            android:text="Ver disponibilidad"
                            android:textColor="@color/travelia_text_dark"
                            android:textAllCaps="false"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SECCIÃ“N RESERVA -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFC107"
                    android:padding="24dp">

                    <!-- TÃ­tulo -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Selecciona el nÃºmero de participantes, fecha e idioma"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#E91E63"
                        android:lineSpacingExtra="4dp" />

                    <!-- Adultos -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/rounded_button_social"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:text="ðŸ‘¥"
                            android:textSize="18sp"
                            android:gravity="center" />

                        <Spinner
                            android:id="@+id/sp_adultos"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:background="@android:color/transparent" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_explorar"
                            app:tint="#999999" />
                    </LinearLayout>

                    <!-- Fecha -->
                    <LinearLayout
                        android:id="@+id/btn_seleccionar_fecha"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/rounded_button_social"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:text="ðŸ“…"
                            android:textSize="18sp"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tv_fecha"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="@string/detalle_fecha_placeholder"
                            android:textSize="16sp"
                            android:textColor="#333333" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_explorar"
                            app:tint="#999999" />
                    </LinearLayout>

                    <!-- Idioma -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/rounded_button_social"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:text="ðŸŒ"
                            android:textSize="18sp"
                            android:gravity="center" />

                        <Spinner
                            android:id="@+id/sp_idioma"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:background="@android:color/transparent" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_explorar"
                            app:tint="#999999" />
                    </LinearLayout>

                    <!-- BotÃ³n Reservar -->
                    <Button
                        android:id="@+id/btn_reservar"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/rounded_button_gold"
                        android:text="Reservar"
                        android:textColor="@color/travelia_text_dark"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:elevation="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SECCIÃ“N RESEÃ‘AS -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ReseÃ±as de viajeros"
                        android:textColor="@color/travelia_text_dark"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_promedio_resenas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.8"
                            android:textColor="@color/travelia_text_dark"
                            android:textSize="34sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:orientation="vertical">

                            <RatingBar
                                android:id="@+id/rb_promedio"
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:rating="4.5"
                                android:stepSize="0.5"
                                android:tint="@color/travelia_yellow" />

                            <TextView
                                android:id="@+id/tv_total_resenas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/review_total_placeholder"
                                android:textColor="@color/travelia_text_muted"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_escribir_opinion"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/rounded_button_gold"
                        android:text="Escribir una opiniÃ³n"
                        android:textColor="@color/travelia_text_dark"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_reviews"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:nestedScrollingEnabled="false" />

                    <Button
                        android:id="@+id/btn_ver_mas_resenas"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/rounded_button_gold"
                        android:text="Ver mÃ¡s reseÃ±as"
                        android:textColor="@color/travelia_text_dark" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- BOTTOM NAV (Custom View) -->
    <com.proyecto.travelia.ui.BottomNavView
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:currentTab="explorar"
        app:finishOnNavigate="true"/>





</androidx.constraintlayout.widget.ConstraintLayout>
