<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Imagen con overlay gradient -->
        <ImageView
            android:id="@+id/iv_destino_big"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/mapi"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="1:1" />

        <!-- BotÃ³n favorito -->
        <ImageView
            android:id="@+id/iv_favorito"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/selector_fav_heart"
            android:background="@drawable/rounded_circle_white_bg"
            android:padding="8dp"
            android:layout_margin="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="Favorito" />


        <!-- Contenido -->
        <LinearLayout
            android:id="@+id/content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingHorizontal="14dp"
            android:paddingTop="12dp"
            android:paddingBottom="14dp"
            app:layout_constraintTop_toBottomOf="@id/iv_destino_big"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- TÃ­tulo -->
            <TextView
                android:id="@+id/tv_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lago Titicaca"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#1C1C1E"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- UbicaciÃ³n -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_ubicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Puno, PerÃº"
                    android:textColor="#6E6E73"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- Precio y Rating -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <!-- Precio -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Desde"
                        android:textColor="#6E6E73"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_precio_desde"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S/380"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#1C1C1E" />
                </LinearLayout>

                <!-- Rating -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/tv_rating_estrellas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â˜…â˜…â˜…â˜…â˜†"
                        android:textSize="14sp"
                        android:textColor="#FBC02D" />

                    <TextView
                        android:id="@+id/tv_rating_texto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.7 - 156 reseÃ±as"
                        android:textColor="#6E6E73"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- BotÃ³n Ver detalles -->
            <Button
                android:id="@+id/btn_ver_detalles"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_button_gold"
                android:text="Ver detalles  â†’"
                android:textColor="@color/travelia_text_dark"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>